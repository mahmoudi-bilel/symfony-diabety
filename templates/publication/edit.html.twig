{% extends 'patient/patient_dashboard.html.twig' %}

{% block title %}Edit publication{% endblock %}

{% block patient %}
    <head>

    <link rel="stylesheet" href="{{ asset('css/style.css') }}">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 mt-4">
                <div class="card shadow-lg">
                    <div class="card-header">
                        <h4>Edit publication</h4>
                    </div>
                    </head>

                    <div class="card-body">
                        {{ form_start(f, {'attr': {'class': 'offer-form'}}) }}
                        {{ form_row(f.titre, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Description'}}) }}

                        {{ form_row(f.description, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Description'}}) }}
                        {{ form_row(f.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'email'}}) }}
                        {{ form_row(f.numerodetel, {'attr': {'class': 'form-control mb-3', 'placeholder': 'numéro de télephone'}}) }}

                        <div class="group-form">
                            <button class="btn btn-info mt-2 btn-block">Submit</button>
                        </div>
                        {{ form_end(f) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}